[user]
        # DO NOT CONFIGURE USER OR EMAIL HERE
        # The should be configured on a per directory basis
[push]
        default = simple
        followTags = true
;[color]
        ;ui = true
        ;status = auto
        ;branch = auto
[core]
        editor = vim
        excludesfile = ~/.gitignore
        fileMode = false
        sshCommand = ssh -i $HOME/.ssh/current/id_rsa_$(git config --get user.email || echo $DEFAULT_GIT_EMAIL) # -F /dev/null, for debugging ssh
[alias]
        lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr %an)%Creset' --abbrev-commit --date=relative
        st = status -s
        ci = commit
        latestcommit = git rev-parse origin/master
[submodule]
    recurse = true
[rebase]
    autosquash = true
[init]
	defaultBranch = main
[merge]
	log = true
[include]
        path = ~/.gitconfig_local
[credential]
	helper = store
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
